<div class="container p-4">
    <div class="row">
        {{#each listProy}}
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <a href="./verProyecto" {{titulo}} target="_blank">
                        <h3 class="card-title text-uppercase">
                            {{titulo}}
                        </h3>
                    </a>
                    <p class="text-muted">
                        {{apreciacion_general}}
                    </p>
                    <p class="text-muted">
                        {{rubro}}
                    </p>
                    <p class="text-muted">
                        {{costo_proyecto}}
                    </p>
                    <p class="text-muted">
                        {{destacado}}
                    </p>
                    <p class="text-muted">
                        {{region}}
                    </p>
                    <p class="text-muted">
                        {{fecha_publicacion}}
                    </p>
                    <p class="text">
                        {{estado}}
                    </p>
                    <a class="btn btn-danger" href="/views/eliminarProy/{{id_proyecto}}">
                        Eliminar
                    </a>
                    <a class="btn btn-secondary" href="/views/actualizarProy/{{id_proyecto}}">
                        actualizar
                    </a>
                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>No hay proyectos para mostrar</p>
                <a href="/views/agregarProy">Publica uno!</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>