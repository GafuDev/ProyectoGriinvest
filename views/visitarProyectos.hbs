<div class="container p-4">
    <div class="row">
        {{#each listAllProy}}
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <a href="/views/verProyecto/{{id_proyecto}}" {{titulo}} target="_blank">
                        <h3 class="card-title text-uppercase">
                            {{titulo}}
                        </h3>
                    </a>
                    <p class="card-text"><b>Rubro:</b> {{rubro}}</p>
                    <p class="card-text"><b>Regi√≥n:</b> {{region}}</p>
                    <div class="p-3">
                        <b>DESCRIPCION GENERAL</b>
                        <p class="card-text">{{apreciacion_general}}</p>
                    </div>
                    <div><b>ASPECTOS DESTACADOS</b>
                        <p class="card-text">{{destacado}}</p>
                    </div>
                    <h4 class="card-title" style="color: green;">Monto: {{costo_proyecto}}</h4>

                    <a class="btn btn-success" href="/views/verProyecto/{{id_proyecto}}">
                        Ver Proyecto
                    </a>
                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>No hay proyectos publicados</p>
            </div>
        </div>
        {{/each}}
    </div>
</div>